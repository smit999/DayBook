<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/viewColor1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/gray_circle"
            android:backgroundTint="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/viewColor1"
            app:layout_constraintBottom_toBottomOf="@id/viewColor1"
            app:layout_constraintStart_toStartOf="@id/viewColor1"
            app:layout_constraintEnd_toEndOf="@id/viewColor1"
            android:src="@drawable/ic_right"
            android:padding="@dimen/_6sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>