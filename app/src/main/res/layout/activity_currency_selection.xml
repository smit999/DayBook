<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CurrencySelectionActivity">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/black"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:text="@string/title_currency_selection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/ic_tick"
            android:padding="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_boarder"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            android:padding="@dimen/_7sdp"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/_11ssp"
            android:drawablePadding="@dimen/_6sdp"
            android:includeFontPadding="false"
            android:drawableStart="@drawable/ic_search_icon"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="@string/hint_search_country"
            />
        <View
            android:id="@+id/viewBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            app:layout_constraintTop_toBottomOf="@id/etSearch"
            android:layout_marginTop="@dimen/_10sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCurrency"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/viewBottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_5sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>